@model WebApp.Models.Produkt

<form asp-action="Create" asp-controller="Produkt" method="post">
    <div>
        <input asp-for="Id" type="hidden" />
    </div>

    <div>
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" type="number" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Producent" class="control-label"></label>
        <select asp-for="Producent" class="form-control" asp-items="Html.GetEnumSelectList<WebApp.Models.ProducentType>()"></select>
        <span asp-validation-for="Producent" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Produktdate" class="control-label"></label>
        <input asp-for="Produktdate" type="date" class="form-control" />
        <span asp-validation-for="Produktdate" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description" class="control-label"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Dodaj produkt</button>
</form>

